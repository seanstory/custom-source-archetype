<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 http://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd" name="custom-source-example"
    xmlns="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <requiredProperties>
    <requiredProperty key="version">
      <defaultValue>0.1.0-SNAPSHOT</defaultValue>
    </requiredProperty>
  </requiredProperties>
  <fileSets>
    <fileSet encoding="UTF-8">
      <directory></directory>
      <includes>
        <include>README.md</include>
        <include>.gitignore</include>
        <include>.travis.yml</include>
      </includes>
    </fileSet>
  </fileSets>
  <modules>
    <module id="example-custom-source-core" dir="__rootArtifactId__-core" name="example-custom-source-core">
      <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>src/main/resources</directory>
          <includes>
            <include>**/*.</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/test/java</directory>
          <includes>
            <include>**/*.groovy</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>src/test/resources</directory>
          <includes>
            <include>**/*.groovy</include>
            <include>**/*.yml</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
    <module id="${rootArtifactId}-dist" dir="__rootArtifactId__-dist" name="${rootArtifactId}-dist">
      <fileSets>
        <fileSet encoding="UTF-8">
          <directory>src/main</directory>
          <includes>
            <include>**/*.md</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>src/main/config</directory>
          <includes>
            <include>**/*.groovy</include>
            <include>**/*.yml</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>src/main/bin</directory>
          <includes>
            <include>**/*.</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>src/main/assembly</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
  </modules>
</archetype-descriptor>
